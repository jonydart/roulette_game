import random

def roulette_game():
    #Op√ßoes
    options = ["vermelho", "preto", "verde"]

    #falta 

    #numeros com chances
    red_numbers = list(range(1, 19))
    black_numbers = list(range(19, 37))
    green_number = 0

    #Escolha do player
    player_choice = input("Escolhe entre vermelho preto e verde para apostares: ").lower()

    if player_choice not in options:
        print("Escolha invalida, escolhe entre vermelho preto ou verde!")
        return

    #Escolher o numero random
    winning_number = random.randint(0, 36)

    #Determinar o resultado
    if winning_number == green_number:
        if player_choice == "verde":
            print("Parabens! Ganhaste com o numero verde.")
        else:
            print("Desculpa! O numero vencedor era verde.")
    elif winning_number in red_numbers:
        if player_choice == "vermelho":
            print("Parabens! Ganhaste com o numero vermelho.")
        else:
            print("Desculpa! O numero vencedor era vermelho.")
    else:
        if player_choice == "preto":
            print("Parabens! Ganhaste com o numero preto.")
        else:
            print("Desculpa! O numero vencedor era preto.")

roulette_game()
